aside
  ul.btn
    li(title="回到顶部", class="icon-arrow-up")
    li(title="全屏", class="icon-fullscreen")
    li(title="目录", class="icon-summary", data-remodal-target="summary")
    if theme.duoshuo_shortname
      li(title="评论", class="icon-comment", data-remodal-target="comment")

  if (page.prev || page.next)
    ul.page
      if page.prev
        li(title= page.prev.title, class="icon-prev")
          a(href= url_for(page.prev.path))   
      if page.next
        li(title= page.next.title, class="icon-next")
          a(href= url_for(page.next.path))

.remodal(data-remodal-id='summary')
  button.remodal-close(data-remodal-action='close')
  h1 目录
  article.summary

if theme.duoshuo_shortname
  .remodal(data-remodal-id='comment')
    button.remodal-close(data-remodal-action='close')
    h1 评论
    article.comment
      .ds-thread(data-thread-key= theme.duoshuo_shortname, data-title= page.title, data-url= url_for(page.path))