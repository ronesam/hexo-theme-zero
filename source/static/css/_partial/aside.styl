aside
  position fixed
  top 50%
  left 50%
  margin -100px 0 0 500px
  z-index 0

  .action
    li 
      padding 12px 10px 12px 12px
    margin-bottom 10px

  .page
    li
      padding 24px 10px 24px 12px

  ul
    border 1px solid #505157
    border-bottom none
    border-radius 4px
    li
      border-bottom 1px solid #505157
      &, a, a:visited
        font 1.5em font-icon      
        cursor pointer
        color #616267
        &:hover
          color #c4612c

    li.icon-screenshot:before
      content '\f05b'

    li.icon-fullscreen:before
      content '\f0b2'

    li.icon-arrow-up
      display none
      &:before
        content '\f062'

    li.icon-toc:before
      content '\f0ca'

    li.icon-summary:before
      content '\f03a'

    li.icon-comment:before
      content '\f086'

    li.icon-prev
      padding-left: 10px
      a:before
        content '\f053'

    li.icon-next
      a:before
        content '\f054'

.category-list
  font-size 0.9em
  padding 15px 20px
  
.category-list-count
  margin-left 8px
  font-size 0.8em
  color color-meta
  &:before
    content '('
  &:after
    content ')'

ul, ol, dl
  list-style none
  ul, ol, dl
    margin-left 20px
    li:before
      content '> '

article.summary, article.toc
  text-align left
  ul, ol
    margin-bottom 0
    li
      border-bottom 1px dashed color-background
      padding 7px 0 5px  
      &:first-child
        padding-top 0
      &:before
        display none
      &:last-child
        border-bottom none
        padding-bottom 0       
    ul, ol
      border-top 1px dashed color-background
      margin-left 0
      margin-top 5px
      li
        font-size 0.93em
        margin-left 2em
        &:first-child
          padding-top 7px
  blockquote
    border-radius 8px
    margin 0 -30px 20px
    padding 15px 20px 1px 40px
    font-style italic
    background #ccc
    background rgba(0, 0, 0, 0.06)
    color #222
    p
      margin-bottom 14px
    footer
      padding 0 0 14px 0
      border-top none
      text-align right
      cite
        &:before
          content '《'
          padding-left 1em
        &:after
          content '》'

.remodal
  border-radius 8px
  .summary
    margin 16px 16px 0
    footer
      text-align right