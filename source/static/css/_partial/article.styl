icon-container-size = 32px
icon-size = 20px

article
  padding 15px 30px
  position relative

  &.page
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f0f6'

  &.summary
    .icon
      &:before
        content '\f03a'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

  .gallery
    margin 0 -30px
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1
      img
        transform scale(1.1, 1.1)
        transition all 0.8s
        @media screen and (max-width: app-width)
          transform none
          transition none

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0
      transition all 0.8s

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  header
    background none
    position relative
    padding 0
    border-bottom 0
    margin-bottom 10px

    .icon
      width icon-container-size
      height icon-container-size
      position absolute
      top 0px
      left 0px
      margin-left -46px
      color #FFFFFF
      background #069
      border-radius 100em
      box-shadow 0 0 4px rgba(0, 0, 0, 0.4)
      @media screen and (max-width: app-width)
        display none
      &:before
        position absolute
        font icon-size font-icon    
        top 6px
        left 0 
        width icon-container-size
        text-align center

    time
      font 0.9em font-title
      margin-bottom 5px
      display block
      line-height 1

    .title
      font-size 1.5em
      font-weight normal
      line-height 1.2
      margin 0
      padding 0
      text-shadow rgba(255, 255, 255, 0.9) 0 1px 0

      a
        color #222

        &:hover
          color color-link

  .entry
    font-size 0.95em
    text-align justify
    line-height 1.6
    @media screen and (max-width: app-width)
      font-size 18px

    h1, h2, h3, h4, h5, h6
      color #222
      padding 0
      margin 0 0 20px
      line-height 1.2

    p, ul, ol, table, dl
      margin 0 0 20px

    p
      white-space pre-wrap
      word-wrap break-word

    h1, h2, h3
      line-height 1.1

    h1
      font-size 1.75em
      @media screen and (max-width: app-width)
        font-size 1.2em

    h2
      font-size 1.5em
      color #393939
      @media screen and (max-width: app-width)
        font-size 1em

    h3, h4, h5, h6
      color #494949

    img, video
      max-width 98%
      border-radius 3px
      padding 5px
      background #FFFFFF
      box-shadow 0 0 8px #aaa

      &.nstyle
        border-radius 0
        padding 0
        background none
        box-shadow none

    iframe
      max-width 98%

    .caption
      display block
      margin 14px 0
      color #aaa
      font-size 0.9em
      &:before
        vertical-align -1px
        margin-right 7px
        content '\f0c6'
        font 1.3em font-icon

    pre
      font-family Monaco, Bitstream Vera Sans Mono, Lucida Console, Terminal
      color #333
      font-size 0.8em
      padding 10px 30px
      background #3A3C42
      color #f8f8f2
      margin 0 -30px 16px
      white-space pre-wrap
      word-wrap break-word
      border-radius 8px
      border none      

      @media screen and (max-width: app-width)
        margin 0 -20px 16px
        padding 10px 20px

      li &
        margin-left -60px
        padding-left 60px

    .gist
      article
        padding 10px

      table
        margin 0

        td
          border-bottom 0
          &.line-numbers
            font-size 12px

      pre
        margin 0 -10px 16px
        padding 10px 20px
        background #f8f8f8
        color #333

    table
      width 100%
      border-collapse collapse
      table-layout fixed

    th, td
      text-align left
      padding 5px 10px
      border-bottom 1px solid #aaa

    dt
      color #222
      font-weight 700

    th
      color #222

    small
      font-size 0.7em

    hr
      border 0
      background #aaa
      height 1px
      margin 0 0 20px

    .text-lt
      text-decoration line-through

  footer
    border-top 1px solid color-background
    padding 12px 0 0 0
    margin-top 12px
    font-size 0.8em
    .categories, .tags, .shares
      margin 5px 0

    .categories:before
      content '\f07b'

    .tags:before
      content '\f02b'
      
ul, ol, dl
  list-style none
  ul, ol, dl
    margin-left 20px
    li:before
      content '> '

article.post
  ol, ul
    li
      margin 0 2em 1em
      @media screen and (max-width: app-width)
        margin 0 1em 1em
      &:before
        margin-right 7px
  ol li:before
    content '✿'
  ul li:before
    content '❀'
  p em
    color color-strong
    font-weight 700
    &:before
      margin-right 5px
      content '★'

article .entry,article.summary, article.toc
  blockquote
    margin 0 -30px 20px
    padding 18px 30px 1px 30px
    border-left none
    font-style italic
    font-size 1em
    background #ccc
    background rgba(0, 0, 0, 0.06)
    color #222
    p
      margin-bottom 14px
    footer
      padding 0 0 14px 0
      border-top none
      text-align right
      cite
        &:before
          content '《'
          padding-left 1em
        &:after
          content '》'
          
article.summary, article.toc
  text-align left
  ul, ol
    margin-bottom 0
    li
      border-bottom 1px dashed color-background
      padding 7px 0 5px  
      &:first-child
        padding-top 0
      &:before
        display none
      &:last-child
        border-bottom none
        padding-bottom 0       
    ul, ol
      border-top 1px dashed color-background
      margin-left 0
      margin-top 5px
      li
        font-size 0.93em
        margin-left 2em
        &:first-child
          padding-top 7px

footer.end-sep
  position relative
  border-bottom 1px dashed color-background
  padding-bottom 10px
  margin -20px 30px 0
  font-size 0.8em
  &:last-child
    border-bottom none
    padding-bottom 15px